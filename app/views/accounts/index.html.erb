<div class="container">
  <h1>Your Account</h1>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Current Balance</h2>
      <div class="balance-display <%= @balance.to_f >= 0 ? 'income' : 'expense' %>">
        <%= br_currency(@balance) %>
      </div>
    </div>
  </div>

  <div class="totals-row">
    <div class="total-card">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Total Income</h2>
          <div class="balance-display income"><%= br_currency(@total_income || 0) %></div>
        </div>
      </div>
    </div>
    <div class="total-card">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">Total Expenses</h2>
          <div class="balance-display expense"><%= br_currency(@total_expenses) %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Recent Transactions</h2>
      <% if @recent_transactions.any? %>
        <table class="table">
        </table>
        <%= link_to 'View All Transactions', transactions_path, class: 'btn btn-primary' %>
      <% else %>
        <p>No transactions yet.</p>
      <% end %>
    </div>
  </div>
</div>