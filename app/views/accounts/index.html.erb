<!-- app/views/accounts/show.html.erb -->
<div class="container mt-4">
  <h1>Your Account</h1>
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title">Balance</h2>
      <h3 class="card-text text-<%= @balance.to_f >= 0 ? 'success' : 'danger' %>">
        <%= number_to_currency(@balance) %>
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Total Income</h2>
          <p class="card-text text-success"><%= number_to_currency(@total_income) %></p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Total Expenses</h2>
          <p class="card-text text-danger"><%= number_to_currency(@total_expenses) %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Recent Transactions</h2>
      <% if @recent_transactions.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Category</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_transactions.each do |transaction| %>
              <tr>
                <td><%= transaction.created_at.strftime('%B %d, %Y') %></td>
                <td><%= transaction.description %></td>
                <td><%= transaction.category&.name %></td>
                <td class="<%= transaction.category&.category_type == 'income' ? 'text-success' : 'text-danger' %>">
                  <%= number_to_currency(transaction.amount) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'View All Transactions', transactions_path, class: 'btn btn-primary' %>
      <% else %>
        <p>No transactions yet.</p>
      <% end %>
    </div>
  </div>
</div>