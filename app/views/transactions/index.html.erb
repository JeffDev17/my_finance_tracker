<!-- app/views/transactions/index.html.erb -->
<h1>Transactions</h1>

<%= link_to 'New Transaction', new_transaction_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.description %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.category.name %></td>
        <td><%= transaction.created_at.strftime('%B %d, %Y') %></td>
        <td>
          <%= link_to 'Show', transaction, class: 'btn btn-sm btn-info' %>
          <%= link_to 'Edit', edit_transaction_path(transaction), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>